{
  "name": "wenyao",
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env tsx watch src/index.ts",
    "dev:all": "dotenv -e .env concurrently -n \"server,pages\" -c \"blue,green\" \"npm run dev\" \"cd pages && npm run dev\"",
    "build": "tsc",
    "start": "dotenv -e .env node dist/index.js",
    "test": "dotenv -e .env vitest run",
    "test:watch": "dotenv -e .env vitest",
    "test:ui": "dotenv -e .env vitest --ui",
    "replay": "dotenv -e .env tsx ./scripts/replay.ts http://localhost:51818/v1/chat/completions",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "lint": "eslint \"src/**/*.{ts,js}\" --fix",
    "lint:check": "eslint \"src/**/*.{ts,js}\""
  },
  "dependencies": {
    "@aws-crypto/sha256-js": "^5.2.0",
    "@aws-sdk/protocol-http": "^3.370.0",
    "@aws-sdk/signature-v4": "^3.370.0",
    "@hono/node-server": "^1.19.6",
    "@hono/zod-validator": "^0.7.4",
    "hono": "^4.10.4",
    "mongodb": "^7.0.0",
    "redis": "^5.10.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/ui": "^4.0.8",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.4.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^4.0.8"
  }
}
